<?xml version='1.0' encoding='utf-8'?>
<widget id="org.climapesca.app" version="4.3.6" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <name>Clima Pesca Digital</name>
    <description>
        Iniciativa de la Organización del Sector Pesquero y Acuícola.
    </description>
    <author email="info@centroclima.org" href="http://climapesca.com">
        Disruptive Partners
    </author>
    <icon src="icon.png" />
    <content src="index.html" />
    <config-file mode="replace" overwrite="true" parent="NSCameraUsageDescription" platform="ios" target="*-Info.plist">
        <string>Soon we will add recognition features, The user will be able to store captures of the current status in the maps obtained directly from the app and read QR codes for tracking</string>
    </config-file>
    <config-file mode="replace" overwrite="true" parent="NSPhotoLibraryUsageDescription" platform="ios" target="*-Info.plist">
        <string>need to access photo library to get pictures from there</string>
    </config-file>
    <allow-navigation href="*://*youtube.com" />
    <access origin="*" />
    <access launch-external="yes" origin="whatsapp:*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="phonegap-version" value="cli-7.1.0" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="android-targetSdkVersion" value="26" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#ee6e73" />
    <preference name="StatusBarStyle" value="blacktranslucent" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
</widget>
